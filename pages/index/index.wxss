.swiper {
  height: 100%;
}
.swiper swiper-item {
  box-sizing: border-box;
}
.swiper swiper-item .banner_img {
  width: 100%;
  height: 100%;
}
.swiper swiper-item:nth-child(2n) {
  border: 0px solid transparent;
}
.nav {
  display: flex;
  margin: 10px 0;
}
.nav .imgbox {
  flex: 1;
  height: 200rpx;
}
.nav .imgbox image {
  width: 100%;
  height: 100%;
}
.lc {
  width: 100%;
}
.lc .shop {
  margin: 20px 0;
}
.lc .shop .tit_img {
  width: 100%;
  height: 26px;
}
.lc .shop .tit_img image {
  width: 100%;
  height: 100%;
}
.lc .shop .img_lists {
  display: flex;
}
.lc .shop .img_lists .left {
  width: 35%;
}
.lc .shop .img_lists .left image {
  width: 100%;
}
.lc .shop .img_lists .right {
  width: 65%;
  display: flex;
  flex-wrap: wrap;
}
.lc .shop .img_lists .right .box:nth-child(1) {
  display: none;
}
.lc .shop .img_lists .right .box {
  margin: 5rpx;
  width: 46%;
}
.lc .shop .img_lists .right .box image {
  width: 100%;
  height: 100%;
}
